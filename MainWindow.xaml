<Window x:Class="NotesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NotesApp" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- サイドバー: ノート一覧 -->
        <StackPanel Grid.Column="0">
            <TextBox x:Name="SearchBox" Margin="8" PlaceholderText="検索..." />
            <ListBox x:Name="NotesList" Margin="8" DisplayMemberPath="title"/>
            <Button x:Name="NewBtn" Content="New" Margin="8"/>
        </StackPanel>

        <!-- エディタ -->
        <DockPanel Grid.Column="1">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Right">
                <Button x:Name="TranslateBtn" Content="翻訳" Margin="4"/>
                <Button x:Name="SaveBtn" Content="保存" Margin="4"/>
            </StackPanel>
            <TextBox x:Name="TitleBox" FontSize="18" FontWeight="Bold" Margin="8" />
            <TextBox x:Name="BodyBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="8"/>
        </DockPanel>
    </Grid>
</Window>
