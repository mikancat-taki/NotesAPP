<Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal" Margin="10">
        <TextBox x:Name="SearchBox" Width="200" PlaceholderText="検索..." Margin="0,0,10,0"/>
        <ComboBox x:Name="CategoryBox" Width="150">
            <ComboBoxItem Content="すべて"/>
            <ComboBoxItem Content="仕事"/>
            <ComboBoxItem Content="個人"/>
            <ComboBoxItem Content="翻訳履歴"/>
        </ComboBox>
        <Button Content="検索" Width="80" Click="Search_Click"/>
    </StackPanel>

    <ListBox x:Name="NotesList" Grid.Row="1" Margin="10" DisplayMemberPath="Title" SelectionChanged="NotesList_SelectionChanged"/>
</Grid>
